# PostgreSQL Database Configuration
DATABASE_URL=postgresql://semantic_explorer_user:semantic_explorer_password@localhost:5432/semantic_explorer
DATABASE_REPLICA_URLS=postgresql://semantic_explorer_user:semantic_explorer_password@localhost:5433/semantic_explorer

# Redis Cluster Configuration
REDIS_CLUSTER_NODES=redis-node-1:6379,redis-node-2:6379,redis-node-3:6379,redis-node-4:6379,redis-node-5:6379,redis-node-6:6379
REDIS_PASSWORD=

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6334
QDRANT_API_KEY=
QDRANT_QUANTIZATION_TYPE=none  # Options: none, scalar, product

# Session Management Configuration
SESSION_MAX_CONCURRENT=5
SESSION_TIMEOUT_MINUTES=30
SESSION_REFRESH_THRESHOLD_MINUTES=5
ENABLE_SESSION_TRACKING=true

# NATS JetStream Configuration
NATS_SERVER_URL=nats://localhost:4222
NATS_USERNAME=
NATS_PASSWORD=
ENABLE_NATS_TLS=false

# OIDC/Authentication Configuration (Dex)
OIDC_CLIENT_ID=semantic-explorer-client
OIDC_CLIENT_SECRET=your-secret-here
OIDC_ISSUER_URL=http://localhost:5556
OIDC_CALLBACK_URL=http://localhost:8000/api/auth/callback

# Audit Logging Configuration
ENABLE_AUDIT_LOGGING=true
AUDIT_NATS_SUBJECT=audit.events
AUDIT_RETENTION_DAYS=90

# Feature Flags & Encryption
ENABLE_RLS=true
ENABLE_QUERY_CACHING=true
ENABLE_HTTP_CACHING=true
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# AWS S3 Configuration (for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_ENDPOINT_URL=  # Leave empty for AWS, use minio/rustfs URL for local (e.g., http://minio:9000)
S3_BUCKET_NAME=semantic-explorer-files  # S3 bucket name for all collections and files

# Observability & Monitoring
PROMETHEUS_SCRAPE_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s
OPENTELEMETRY_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
QUICKWIT_URL=http://localhost:7280

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENABLE_API_DOCS=true

# Logging Configuration
LOG_LEVEL=info
RUST_LOG=semantic_explorer=debug,actix_web=info,sqlx=debug

# Environment Identifier
ENVIRONMENT=development
APP_VERSION=1.0.0
