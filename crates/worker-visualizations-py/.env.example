# ================================
# Service Configuration
# ================================
WORKER_ID=worker-visualizations-1

# ================================
# NATS Configuration
# ================================
NATS_URL=nats://localhost:4222
# Retry settings for stream subscription (handles startup race conditions)
NATS_STREAM_RETRY_ATTEMPTS=30
NATS_STREAM_RETRY_DELAY=2.0
# Pull subscription settings
NATS_BATCH_SIZE=1
NATS_FETCH_TIMEOUT=5.0

# ================================
# Qdrant Vector Database Configuration
# ================================
QDRANT_URL=http://localhost:6334
QDRANT_API_KEY=

# ================================
# AWS S3 Configuration
# ================================
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://minio:9000
S3_BUCKET_NAME=semantic-explorer-local

# ================================
# Worker Configuration
# ================================
PROCESSING_TIMEOUT_SECS=3600
HEALTH_CHECK_PORT=8080
PROMETHEUS_METRICS_PORT=8081

# ================================
# Observability & Monitoring
# ================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_FORMAT=json
LOG_LEVEL=INFO
